<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>CSV Upload</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
      .main{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        
      }
    </style>
   
</head>

<body >
  <marquee behavior="" class="bg-info p-2 text-denger" direction="right">Upload Your CSV File to View</marquee>
   <div class="main">
       <!-- home.ejs -->
    <div class="mt-3">
      <h1 class="text-center mb-4">CSV Upload</h1>
      <form action="/upload" method="post" enctype="multipart/form-data"  class="text-center">
        <div class="form-group">
            <label for="csvFile">Select a CSV file to upload:</label>
            <input type="file" class="form-control-file" id="csvFile" name="csv" accept=".csv">
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>

  <!-- Uploaded File  -->
  <h1 class=" homeHeading text-primary mt-5">Uploaded Files</h1>

    <div>
      <table class="table table-sm table-striped text-center table-hover ">
        <thead class="table-light">
          <tr>
            <th>Filename</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% files.forEach(function(file) { %>
            <tr>
              <td><%= file.filename %></td>
              
              <td>
                <a href="/csv/<%= file._id %>">View</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <marquee behavior="" direction="right">Click on the View to view the CSV File</marquee>
   
   </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>

